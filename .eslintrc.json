{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-proto": "error",
    "no-iterator": "error",
    "no-restricted-properties": [
      "error",
      {
        "object": "Object",
        "property": "__proto__",
        "message": "Use Object.getPrototypeOf() instead"
      },
      {
        "object": "process",
        "property": "env",
        "message": "Use explicit environment variable access with proper validation"
      }
    ],
    "no-restricted-globals": [
      "error",
      {
        "name": "eval",
        "message": "eval() is dangerous and can lead to code injection vulnerabilities"
      },
      {
        "name": "Function",
        "message": "Function constructor is dangerous and can lead to code injection vulnerabilities"
      }
    ],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.name='eval']",
        "message": "eval() is forbidden due to security risks"
      },
      {
        "selector": "NewExpression[callee.name='Function']",
        "message": "new Function() is forbidden due to security risks"
      }
    ]
  },
  "env": {
    "node": true,
    "es2022": true
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "*.js"
  ]
}
